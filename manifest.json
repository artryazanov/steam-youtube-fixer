{
    "name": "Steam YouTube Fixer",
    "description": "This extension fixes Steam YouTube video import process",
    "version": "0.3.1",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://steamcommunity.com/*",
        "http://steamcommunity.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "img/alien16.png",
        "32": "img/alien32.png",
        "64": "img/alien64.png"
    },
    "action": {
        "default_title": "Steam YouTube Fixer",
        "default_icon": {
            "16": "img/alien16.png",
            "32": "img/alien32.png"
        }
    }
}